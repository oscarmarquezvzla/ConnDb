<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gedica.conndb.CentroAlmacenGui">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="160sp"
        android:layout_height="20sp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="23dp"
        android:text="Ultimo Centro-Almacen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/tv1"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="80sp"
        android:layout_height="20sp"
        android:layout_marginTop="29dp"
        android:text="Centro"
        android:layout_below="@+id/et1"
        android:layout_toStartOf="@+id/et1" />

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/tv2"
        android:layout_alignStart="@+id/et1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="80sp"
        android:layout_height="20sp"
        android:layout_alignStart="@+id/tv2"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="35dp"
        android:text="Almacen" />

    <Spinner
        android:id="@+id/sp2"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/sp1"
        android:layout_alignTop="@+id/tv3" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="120sp"
        android:layout_height="20sp"
        android:layout_marginTop="34dp"
        android:text="Tipo Configuración"
        android:layout_below="@+id/tv3"
        android:layout_alignEnd="@+id/tv3" />

    <Spinner
        android:id="@+id/sp3"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/tv4"
        android:layout_alignStart="@+id/sp2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/tv4"
        android:layout_below="@+id/tv4"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"
        android:onClick="Aceptar_clic"
        android:text="Aceptar" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignEnd="@+id/sp3"
        android:layout_marginEnd="50dp"
        android:onClick="Cancelar_clic"
        android:text="Cancelar" />

</RelativeLayout>
